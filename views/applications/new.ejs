<%- include ('../partials/head.ejs') %>

  <body>
    <%- include ('../partials/nav.ejs') %>

    <h1 style="text-align:center">Create a new job application!</h1>
    <!-- <div class="card" style="width: 27rem;"> -->

<div class="card card-bodies" id="card-style" style="width: 40%; height:400px;">
      <button id="edit-btn"type="button" name="button"><a id="edit-btn"href="/applications">Back</a></button>

    <form id="new-card"action="/applications" method="POST">
      <div class="form-group">


      <input type="text" name="companyName" placeholder="Company Name" /><br>
      </div>
      <div class="form-group">
      <input type="text" name="jobTitle" placeholder="Job Title"/><br>
      </div>
      <div class="form-group">
      <input type="text" name="location" placeholder="Location"/><br>
      </div>
      <div class="form-group">
      <input type="text" name="jobLink" placeholder="<link>"/><br>
      </div>
      <div class="form-group">
      <input id="number" type="number" name="desired" min="0" max="5" placeholder="Rank (0-5)"/><br>
      </div>
      <div class="form-group">
      <input type="date" name="date" placeholder="Date Applied"/><br>
      </div>
      <input class="btn btn-primary"type="submit" value="Create Job App">
    </form>
    </div>
  </body>
</html>
