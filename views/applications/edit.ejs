<%- include ('../partials/head.ejs') %>
  <body>
    <%- include ('../partials/nav.ejs') %>

    <h2>Edit Job Application</h2>


  <div class="card" id="card-style" style="width: 40%; height:400px;">
        <button id="edit-btn"type="button" name="button"><a id="edit-btn"href="/applications">Back</a></button>

      <form id="new-card"action="/applications/<%=application.id%>?_method=PUT" method="POST">
        <div class="form-group">


        <input type="text" name="companyName" placeholder="Company Name" value="<%=application.companyName%>" /><br>
        </div>

        <div class="form-group">
        <input value="<%=application.jobTitle%>" type="text" name="jobTitle" placeholder="Job Title"/><br>
        </div>

        <div class="form-group">
        <input value="<%=application.location%>" type="text" name="location" placeholder="Location"/><br>
        </div>

        <div class="form-group">
        <input value="<%=application.jobLink%>" type="text" name="jobLink" placeholder="<Job Link>"/><br>
        </div>

        <div class="form-group">
        <input value="<%=application.desired%>" id="number" type="number" name="desired" min="0" max="5" placeholder="Rank (0-5)"/><br>
        </div>

        <div class="form-group">
        <input value="<%=application.date%>" type="date" name="date" placeholder="Date Applied"/><br>
        </div>

        <input class="btn btn-primary"type="submit" value="Edit Job App">
      </form>
      </div>

  </body>
</html>
